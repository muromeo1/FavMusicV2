<%= form_for @user do |f| %>
<div class="container white-container">
  <div class="text-center">
    <div class="row">
      <div class="col-12">
        <h1 class="pacific-font">Bem-Vindo!</h1>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-12">
        <h4>Cadastre-se</h4>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-10 offset-1">
      <label for="name">Nome</label>
      <%= f.text_field :name, placeholder: "Ex.: Cooper", id: "name", class: "form-control"%>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-10 offset-1">
      <label for="email">E-mail</label>
      <%= f.text_field :email, placeholder: "Ex.: mars@gmail.com", id: "email", class: "form-control"%>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-10 offset-1">
      <label for="age">Idade</label>
      <%= f.text_field :age, placeholder: "Ex.: 60", id: "age", class: "form-control"%>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-10 offset-1">
      <%= f.submit "Cadastrar", class: "btn btn-info btn-block btn-lg" %>
    </div>
  </div>


</div>
<% end %>
